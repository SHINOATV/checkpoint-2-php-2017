{% extends 'base.html.twig' %}

{% block body %}
    <h1>Story</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ story.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ story.title }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('story_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('story_edit', { 'id': story.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
